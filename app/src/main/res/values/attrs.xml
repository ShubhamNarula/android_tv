<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="isTablet">false</bool>
    <declare-styleable name="DpadAwareRecyclerView">
        <attr name="backgroundSelector" format="reference" />
        <attr name="foregroundSelector" format="reference" />
        <attr name="selectorVelocity" format="integer" />
        <attr name="smoothScrolling" format="boolean" />
        <attr name="interceptTopBottomScroll" format="boolean" />
    </declare-styleable>

        <declare-styleable name="VerticalLabelView">
            <attr name="text" format="string" />
            <attr name="textColor" format="color" />
            <attr name="textSize" format="dimension" />
        </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="direction">
            <enum name="uptodown" value="0" />
            <enum name="downtoup" value="1" />
            <enum name="lefttoright" value="2" />
            <enum name="righttoleft" value="3" />
        </attr>
    </declare-styleable>

</resources>